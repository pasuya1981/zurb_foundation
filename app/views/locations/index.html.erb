<h3 class="pull-left"><span class="label label-info">所有地點</span></h3>
<h3 class="pull-right">
  <%= link_to('新增地點', new_location_path, class: 'label label-warning') %>
</h3>

<table class="table table-hover">
  <tr>
  	<th>地點名稱</th>
  	<th>地址</th>
  	<th>經度</th>
  	<th>緯度</th>
  	<th>&nbsp;</th>
  </tr>
  <% @locations.each do |location| %>
    <tr>
    	<td><%= location.name %></td>
    	<td><%= location.address %></td>
    	<td><%= location.longitude %></td>
    	<td><%= location.latitude %></td>
    	<td>
    	  <%= link_to('進入', location_path(location), class: 'label label-info') %>
    	  <%= link_to('編輯', edit_location_path(location), class: 'label label-primary') %>
    	  <%= link_to('刪除', location_path(location), class: 'label label-danger', method: :delete, data: {confirm: '確定刪除?'}) %>
    	</td>
    </tr>
  <% end %>
</table>